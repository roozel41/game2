<?xml version="1.0" encoding="UTF-8"?>
<Definitions>

	<!--  Baloons  -->
	
	<Baloon floatingUpAnim="gameplay/character/floatUp.xml" 
			floatingLeftAnim="gameplay/character/floatLeft.xml" 
			floatingRightAnim="gameplay/character/floatRight.xml" 
			inVortexAnim="gameplay/character/characterReachedVortex.xml" 
			deathAnim="gameplay/character/death.xml">
		<localBounds minX='-0.325' minY='-0.6' maxX='0.325' maxY='0.6' />
	</Baloon>
	
	
	<!-- Fans -->
	
	<Fan direction="Left" anim="gameplay/leftFanOn.xml" windFx="gameplay/wind/leftWindFx.xml" >
		<localBounds minX='-0.725' minY='-0.975' maxX='0.725' maxY='0.975' />
		<windFieldBounds minX='-2.0' minY='-0.975' maxX='0.17' maxY='0.975' />
		<BlowForce x='-0.3' y='0' z='0' />
	</Fan>
	
	<Fan direction="Right" anim="gameplay/rightFanOn.xml" windFx="gameplay/wind/rightWindFx.xml" >
		<localBounds minX='-0.725' minY='-0.975' maxX='0.725' maxY='0.975' />
		<windFieldBounds minX='-0.17' minY='-0.975' maxX='2.0' maxY='0.975' />
		<BlowForce x='0.3' y='0' z='0' />
	</Fan>
	
	<!--  Devices  -->
	
	<ExitDoor >
		<localBounds minX='-1.44' minY='-0.67' maxX='1.44' maxY='0.67' />
	</ExitDoor>
	
	<Puff anim="gameplay/puffAnim.xml" >
		<localBounds minX='-0.495' minY='-0.455' maxX='0.495' maxY='0.455' />
	</Puff>
	
	<!-- Gestures -->
	<GesturesDB>
		<Gesture id="ADD_LEFT_FAN" type="DirectionalGesture" >
			<Direction x='-1' y='0' z='0' />
		</Gesture>
		
		<Gesture id="ADD_RIGHT_FAN" type="DirectionalGesture" >
			<Direction x='1' y='0' z='0' />
		</Gesture>
		
		<Gesture id="RELEASE_BALOON" type="DirectionalGesture" >
			<Direction x='0' y='-1' z='0' />
		</Gesture>
		
		<!--  there are a couple gestures corresponding to the fan removal - basically
		we want the user to smear over the fan back and forth -->
		<Gesture id="REMOVE_FAN" type="AngularGesture" directionChanges='1' angle='150.0' angleTolerance='60.0' continuous='true' />
	
	</GesturesDB>
	
</Definitions>
